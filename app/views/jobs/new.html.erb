<div class="container">
  <h1>Create a new job vacancy</h1>
  <%= form_for(@job) do |f| %>
    <div class="form-group">
      <%= f.label :job_title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :school %>
      <%= f.text_field :school, class: 'form-control' %>
    </div>

      <div class="form-group">
      <%= f.label :salary %>
      <%= f.text_field :salary, class: 'form-control' %>
    </div>

     <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>
    </div>
    <%= f.submit "save", class: 'btn btn-primary' %>
  <% end %>
</div>
